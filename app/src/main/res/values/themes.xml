<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GrupoEightUNAL" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="textAppearanceSubtitle1">@style/Theme.GrupoEightUNAL.Subtitle1</item>
        <item name="textAppearanceBody1">@style/Theme.GrupoEightUNAL.Body1</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GrupoEightUNAL.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/play_regular</item>
        <item name="android:textSize">16dp</item>

    </style>

    <style name="Theme.GrupoEightUNAL.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/play_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.GrupoEightUNAL.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GrupoEightUNAL.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GrupoEightUNAL.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>